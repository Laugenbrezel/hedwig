/* the nice_box */
.nice_box {
	width: 500px;
	border-collapse: collapse;
}

td.nice_box {
	border: thin dashed;
	border-color: #BDBDBD;
	padding: 5px 10px 5px 70px;
	vertical-align: middle;
	white-space: nowrap;
	overflow: hidden;
	height: 60px;
}

.one {
	background: url(#{request.contextPath}/resources/gfx/one.png) no-repeat;
	background-position: 10px 5px;
}

.NOT_OK {
	background: url(#{request.contextPath}/resources/gfx/two.png) no-repeat;
	background-position: 10px 5px;
	background-color: #FA5858;
	color: #FFFFFF;
}

.UNKNOWN {
	background: url(#{request.contextPath}/resources/gfx/three.png) no-repeat;
	background-position: 10px 5px;
	background-color: #F2F2F2;
	opacity: 0.7;
}

.OK {
	background: url(#{request.contextPath}/resources/gfx/four.png) no-repeat;
	background-position: 10px 5px;
	background-color: #9FF781;
}

.UNREACHABLE {
	background: url(#{request.contextPath}/resources/gfx/five.png) no-repeat;
	background-position: 10px 5px;
	background-color: #FFBF00;
}